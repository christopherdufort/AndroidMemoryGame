<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:id="@+id/main_content"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:weightSum="3" 
    tools:context="ccom.android.imagematchapp.MainActivity" >
    
	<LinearLayout
	    android:id="@+id/left_column"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_width="0dp" 
        android:layout_weight="2">
	    
	    <TableLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:stretchColumns="*" >
	
	        <TableRow
	            android:layout_weight="1"
	            android:gravity="center_horizontal" >
	
	            <ImageButton
	                android:id="@+id/button1"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="1" />
	
	            <ImageButton
	                android:id="@+id/button2"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="2" />
	
	            <ImageButton
	                android:id="@+id/button3"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="3" />

	        </TableRow>
	
	        <TableRow
	            android:layout_weight="1"
	            android:gravity="center_horizontal" >
	
	            <ImageButton
	                android:id="@+id/button4"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="4" />
	
	            <ImageButton
	                android:id="@+id/button5"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="5" />
	
	            <ImageButton
	                android:id="@+id/button6"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="6" />

	        </TableRow>
	
	        <TableRow
	            android:layout_weight="1"
	            android:gravity="center_horizontal" >
	
	            <ImageButton
	                android:id="@+id/button7"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="7" />
	
	            <ImageButton
	                android:id="@+id/button8"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="8" />
	
	            <ImageButton
	                android:id="@+id/button9"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:contentDescription="@string/desc"
	                android:onClick="handleClick"
	                android:scaleType="fitCenter"
	                android:src="@drawable/img00"
	                android:tag="9" />

	        </TableRow>
	    </TableLayout>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/right_column"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:layout_width="0dp"
        android:layout_weight="1">
	    
	     <TextView
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center"
	         android:layout_weight="1"
	         android:gravity="center"
	         android:text="@string/title"
	         android:textAppearance="?android:attr/textAppearanceLarge" />
	         
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center" >
	
	        <TextView
	            android:id="@+id/misses"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:text="@string/misses" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	        <TextView
	            android:id="@+id/missesCtr"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="@string/missesCtr" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	        <TextView
	            android:id="@+id/matches"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:text="@string/matches" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	        <TextView
	            android:id="@+id/matchesCtr"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="@string/matchesCtr" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center|top" >
	
	        <TextView
	            android:id="@+id/totalMisses" 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:text="@string/totalMisses" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	        <TextView
	            android:id="@+id/totalMissesCtr"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="@string/totalMissesCtr" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	        <TextView
	            android:id="@+id/totalMatches"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:text="@string/totalMatches" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	
	        <TextView
	            android:id="@+id/totalMatchesCtr"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="@string/totalMatchesCtr" 
	            android:textAppearance="?android:attr/textAppearanceLarge"/>
	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center|bottom" >
	
	        <Button
	            android:id="@+id/scramble"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:onClick="handleScramble"
	            android:text="@string/scramble"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <Button
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:onClick="launchAboutActivity"
	            android:text="@string/about"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center|top" >
	
	        <Button
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:onClick="rotateOrientation"
	            android:text="@string/rotate"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <Button
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:onClick="zeroAndSave"
	            android:text="@string/zero"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	    </LinearLayout>
	</LinearLayout>
</LinearLayout>